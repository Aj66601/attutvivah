@model ATTUT.Data.Models.ProfileModel
@{
    ViewData["Title"] = "My Profile";
}
<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    My Profile
                </header>
                <div class="panel-footer">
                    <a title="Edit" class="btn btn-sm btn-success" href="../Profile/EditProfile">Edit</a>
                    <a title="Bank List" class="btn btn-sm btn-success" href="../Profile/ChangePassword">Change Password</a>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <fieldset>
                            <legend>Official Information</legend>
                            <div class="form-group">
                                <label asp-for="EmployeeId" class="control-label input-sm col-md-2"></label>
                                <label class="control-label input-sm col-md-4">@Model.EmployeeId</label>
                                <label asp-for="Role" class="control-label input-sm col-md-2"></label>
                                <label class="control-label input-sm col-md-4">@Model.Role</label>
                            </div>
                            <div class="form-group">
                                <label asp-for="BranchId" class="control-label input-sm col-md-2"></label>
                                <label class="control-label input-sm col-md-4">@Model.BranchName</label>
                            </div>
                        </fieldset>
                        <fieldset>
                            <legend>General Information</legend>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label input-sm col-md-2"></label>
                                <label class="control-label input-sm col-md-4">@Model.Name</label>
                                <label asp-for="ContactNo" class="control-label input-sm col-md-2"></label>
                                <label class="control-label input-sm col-md-4">@Model.ContactNo</label>
                            </div>
                            <div class="form-group">
                                <label asp-for="EmailId" class="control-label input-sm col-md-2"></label>
                                <label class="control-label input-sm col-md-4">@Model.EmailId</label>
                                <label asp-for="Address" class="control-label input-sm col-md-2"></label>
                                <label class="control-label input-sm col-md-4">@Model.Address</label>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    } 
}
