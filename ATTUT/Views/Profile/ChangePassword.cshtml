@model ATTUT.Data.Models.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}
<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Change Password
                </header>
                <div class="panel-body">
                    <form asp-action="ChangePassword" autocomplete="off">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="EmpId" value="0" />
                            <div class="form-group">
                                <label asp-for="OldPassword" class="control-label input-sm col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="OldPassword" class="form-control input-sm" />
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="NewPassword" class="control-label input-sm col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="NewPassword" class="form-control input-sm" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label input-sm col-md-2"></label>
                                <div class="col-md-4">
                                    <input asp-for="ConfirmPassword" class="form-control input-sm" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-4">
                                    <input type="submit" value="Update" class="btn btn-sm btn-success" />
                                    <a class="btn btn-sm btn-danger" href="/Profile/MyProfile">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
