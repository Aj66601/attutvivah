@model IEnumerable<ATTUT.Data.Models.CompanyModel>
@{
    ViewData["Title"] = "Company List";
    int i = 1;
}

<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Company List
                   @* <span class="tools pull-right">
                        <a class="btn btn-sm btn-danger" href="/Config/AddCompany">Add</a>
                    </span>*@
                </header>
                <div class="panel-body">
                    <table class="table table-bordered table-responsive-md" id="tblCompany">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Company Name</th>
                                <th>GSTIN</th>
                                <th>Address</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.Count() > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.GSTIN)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                            <td>
                                                <a href="/Config/EditCompany?Id=@item.ID"><i class="fa fa-edit"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(function () {
            $("#tblCompany").dataTable({ "ordering": true, 'iDisplayLength': 100 });
        });
    </script>
}