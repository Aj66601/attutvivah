@model ATTUT.Data.Models.CompanyModel
@{
    ViewData["Title"] = "Edit Company";
}
<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Add company
                    <span class="tools pull-right">
                        <a class="btn btn-sm btn-danger" href="/Config/Company">Back</a>
                    </span>
                </header>
                <div class="panel-body">
                    <form asp-action="AddCompany" autocomplete="off">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <fieldset>
                                <legend>Company Details</legend>
                                <div class="form-group">
                                    <label asp-for="CompanyName" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input asp-for="CompanyName" class="form-control input-sm" />
                                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                                    </div>
                                    <label asp-for="Address" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <textarea rows="2" asp-for="Address" class="form-control input-sm"></textarea>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Mobile" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input type="text" asp-for="Mobile" class="form-control input-sm" />
                                        <span asp-validation-for="Mobile" class="text-danger"></span>
                                    </div>
                                    <label asp-for="Email" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input type="text" asp-for="Email" class="form-control input-sm" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Website" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input type="text" asp-for="Website" class="form-control input-sm" />
                                        <span asp-validation-for="Website" class="text-danger"></span>
                                    </div>
                                    <label asp-for="GSTIN" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input type="text" asp-for="GSTIN" class="form-control input-sm" />
                                        <span asp-validation-for="GSTIN" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="PanNo" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input type="text" asp-for="PanNo" class="form-control input-sm" />
                                        <span asp-validation-for="PanNo" class="text-danger"></span>
                                    </div>
                                    <label asp-for="CIN" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input type="text" asp-for="CIN" class="form-control input-sm" />
                                        <span asp-validation-for="CIN" class="text-danger"></span>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <legend>Bank Details</legend>
                                <div class="form-group">
                                    <label asp-for="BankName" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input type="text" asp-for="BankName" class="form-control input-sm" />
                                        <span asp-validation-for="BankName" class="text-danger"></span>
                                    </div>
                                    <label asp-for="BankAddress" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input type="text" asp-for="BankAddress" class="form-control input-sm" />
                                        <span asp-validation-for="BankAddress" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AccountNo" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input type="text" asp-for="AccountNo" class="form-control input-sm" />
                                        <span asp-validation-for="AccountNo" class="text-danger"></span>
                                    </div>
                                    <label asp-for="IFSCCode" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input type="text" asp-for="IFSCCode" class="form-control input-sm" />
                                        <span asp-validation-for="IFSCCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Paytm" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input type="text" asp-for="Paytm" class="form-control input-sm" />
                                        <span asp-validation-for="Paytm" class="text-danger"></span>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-4">
                                <input type="submit" value="Save" class="btn btn-sm btn-success" />
                                <a class="btn btn-sm btn-danger" href="/Config/Company">Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}
