@model ATTUT.Data.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
    <style>
        .btn {
            width: 100%;
            margin-top: 5px;
            padding: 5px 0px;
        }
    </style>
</head>
<body>
    <section class="w3l-forms-23">
        <div class="forms23-block-hny">
            <div class="wrapper">
                <div class="d-grid forms23-grids">
                    <div class="form23">
                        <div class="main-bg">
                            <div class="speci-login first-look">
                                <img src="~/images/no-pic.jpg" alt="Login" class="img-responsive" style="margin-top: 20px;width: 80%;">
                            </div>
                        </div>
                        <div class="bottom-content">
                            <form asp-action="Login">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group text-center" style="border-bottom:1px solid #CCC;margin-bottom:10px;">
                                    <h3>User login</h3>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Username" class="control-label"></label>
                                    <input asp-for="Username" value="" class="form-control" autocomplete="off" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="control-label"></label>
                                    <input asp-for="Password" value="" class="form-control" type="password" autocomplete="off" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <center> <input type="submit" value="Login" class="btn btn-primary button" /></center>
                                </div>
                                <div class="form-group">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                    </label>
                                    <span style="float:right;"> Forget  <a href="#" style="text-decoration:none;">password?</a></span>
                                </div>
                                <div class="form-group">
                                    @if (TempData["Error"] != null)
                                    {
                                        <div class="alert alert-danger alert-dismissible">
                                            <strong>Danger!</strong> @TempData["Error"]
                                        </div>
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>