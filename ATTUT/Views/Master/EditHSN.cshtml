@model ATTUT.Data.Models.HSNCodeModel
@{
    ViewData["Title"] = "Edit HSN Code";
}
<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Edit HSN Code
                    <span class="tools pull-right">
                        <a class="btn btn-sm btn-danger" href="/Master/HSNList">Back</a>
                    </span>
                </header>
                <div class="panel-body">
                    <form asp-action="EditHSN" autocomplete="off">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ID" />
                            <input type="hidden" asp-for="CompanyId" />
                            <fieldset>
                                <legend>HSN Details</legend>                                 
                                <div class="form-group">
                                    <label asp-for="HSNCode" class="control-label input-sm col-md-1"></label>
                                    <div class="col-md-2">
                                        <input asp-for="HSNCode" class="form-control input-sm" />
                                        <span asp-validation-for="HSNCode" class="text-danger"></span>
                                    </div>
                                    <label asp-for="CGST" class="control-label input-sm col-md-1"></label>
                                    <div class="col-md-2">
                                        <input asp-for="CGST" class="form-control input-sm" />
                                        <span asp-validation-for="CGST" class="text-danger"></span>
                                    </div>
                                    <label asp-for="SGST" class="control-label input-sm col-md-1"></label>
                                    <div class="col-md-2">
                                        <input asp-for="SGST" class="form-control input-sm" />
                                        <span asp-validation-for="SGST" class="text-danger"></span>
                                    </div>
                                    <label asp-for="IGST" class="control-label input-sm col-md-1"></label>
                                    <div class="col-md-2">
                                        <input asp-for="IGST" class="form-control input-sm" />
                                        <span asp-validation-for="IGST" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                   
                                    <label asp-for="Surcharge" class="control-label input-sm col-md-1"></label>
                                    <div class="col-md-2">
                                        <input asp-for="Surcharge" class="form-control input-sm" />
                                        <span asp-validation-for="Surcharge" class="text-danger"></span>
                                    </div>
                                    <label asp-for="Cess" class="control-label input-sm col-md-1"></label>
                                    <div class="col-md-2">
                                        <input asp-for="Cess" class="form-control input-sm" />
                                        <span asp-validation-for="Cess" class="text-danger"></span>
                                    </div>
                                    <label asp-for="Description" class="control-label input-sm col-md-1"></label>
                                    <div class="col-md-5">
                                        <textarea asp-for="Description" class="form-control input-sm"></textarea> 
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-1 col-md-2">
                                        <input type="submit" value="Update" class="btn btn-sm btn-success" />
                                        <a class="btn btn-sm btn-danger" href="/Master/HSNList">Cancel</a>
                                    </div>
                                </div>
                            </fieldset>

                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/common.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}
