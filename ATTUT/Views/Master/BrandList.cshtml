@model IEnumerable<ATTUT.Data.Models.BrandModel>
@{
    ViewData["Title"] = "Brand List";
    int i = 1;
}

<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Brand List
                    <span class="tools pull-right">
                        <a class="btn btn-sm btn-danger" href="/Master/AddBrand">Add</a>
                    </span>
                </header>
                <div class="panel-body">
                    <table class="table table-bordered table-responsive-md" id="tblBrand">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Brand Name</th> 
                                <th>Is Active</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.Count() > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@Html.DisplayFor(modelItem => item.BrandName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                                            <td>
                                                <a href="/Master/EditBrand?Id=@item.BrandID"><i class="fa fa-edit"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(function () {
            $("#tblBrand").dataTable({ "ordering": true, 'iDisplayLength': 100 });
        });
    </script>
}