@model IEnumerable<ATTUT.Data.Models.WarehouseModel>
@{
    ViewData["Title"] = "Warehouse List";
    int i = 1;
}

<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Warehouse List
                    <span class="tools pull-right">
                        <a class="btn btn-sm btn-danger" href="/Master/AddWarehouse">Add</a>
                    </span>
                </header>
                <div class="panel-body">
                    <table class="table table-bordered table-responsive-md" id="tblWarehouse">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Branch</th>
                                <th>Warehouse Name</th>
                                <th>Is Active</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.Count() > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@Html.DisplayFor(modelItem => item.BranchName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.WarehouseName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                                            <td>
                                                <a href="/Master/EditWarehouse?Id=@item.WarehouseId"><i class="fa fa-edit"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(function () {
            $("#tblWarehouse").dataTable({ "ordering": true, 'iDisplayLength': 100 });
        });
    </script>
}