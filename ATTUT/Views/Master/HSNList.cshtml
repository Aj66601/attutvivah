@model IEnumerable<ATTUT.Data.Models.HSNCodeModel>
@{
    ViewData["Title"] = "HSN List";
    int i = 1;
}

<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    HSN List
                    <span class="tools pull-right">
                        <a class="btn btn-sm btn-danger" href="/Master/AddHSN">Add</a>
                    </span>
                </header>
                <div class="panel-body">
                    <table class="table table-bordered table-responsive-md" id="tblHSN">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>HSN Code</th> 
                                <th>CGST(%)</th>
                                <th>SGST(%)</th>
                                <th>IGST(%)</th>
                                <th>Surcharge(%)</th>
                                <th>Cess(%)</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.Count() > 0)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@Html.DisplayFor(modelItem => item.HSNCode)</td> 
                                            <td>@Html.DisplayFor(modelItem => item.CGST)</td>
                                            <td>@Html.DisplayFor(modelItem => item.SGST)</td>
                                            <td>@Html.DisplayFor(modelItem => item.IGST)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Surcharge)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Cess)</td>
                                            <td>
                                                <a href="/Master/EditHSN?Id=@item.ID"><i class="fa fa-edit"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(function () {
            $("#tblHSN").dataTable({ "ordering": true, 'iDisplayLength': 100 });
        });
    </script>
}