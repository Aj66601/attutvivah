@model ATTUT.Data.Models.CategoryModel
@{
    ViewData["Title"] = "Edit Category";
}
<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Edit Category
                    <span class="tools pull-right">
                        <a class="btn btn-sm btn-danger" href="/Master/BrandList">Back</a>
                    </span>
                </header>
                <div class="panel-body">
                    <form asp-action="EditCategory" autocomplete="off">
                        <div class="form-horizontal">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CategoryID" />
                            <fieldset>
                                <legend>Category Details</legend>
                                <div class="form-group">
                                    <label asp-for="CategoryName" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input asp-for="CategoryName" class="form-control input-sm" />
                                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                                    </div>
                                    <label asp-for="IsActive" class="control-label input-sm col-md-2"></label>
                                    <div class="col-md-4">
                                        <input asp-for="IsActive" />
                                        <span asp-validation-for="IsActive" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-2">
                                        <input type="submit" value="Save" class="btn btn-sm btn-success" />
                                        <a class="btn btn-sm btn-danger" href="/Master/CategoryList">Cancel</a>
                                    </div>
                                </div>
                            </fieldset>

                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/common.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}
